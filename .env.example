#############################################
# .env.example (Template - No Real Secrets) #
#############################################
# Copy to `.env` and fill in secure values. In production supply via secret manager.

# --- Core ---
APP_NAME="AI Driven Recruitment Backend"
APP_VERSION=1.0.0
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log
SECRET_KEY=REPLACE_ME_STRONG_KEY

# --- Database (Production Recommended: Postgres) ---
DATABASE_URL=postgresql+asyncpg://user:password@db-host:5432/recruitment

# --- Clerk Authentication (leave blank to disable) ---
CLERK_PUBLISHABLE_KEY=
CLERK_SECRET_KEY=
CLERK_JWT_SECRET="-----BEGIN PUBLIC KEY-----\nREPLACE\n-----END PUBLIC KEY-----"

# --- Optional Dev Bypass (omit in prod) ---
DEV_BEARER_TOKEN=
DEV_USER_ID=1
DEV_USER_EMAIL=dev@example.com
DEV_USER_ROLE=manager
DEV_TENANT_ID=1

# --- External APIs ---
OPENAI_API_KEY=
APIFY_API_TOKEN=
APOLLO_API_KEY=
HUNTER_API_KEY=
SENDGRID_API_KEY=

# --- Email / SMTP ---
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
EMAIL_FROM=noreply@example.com
EMAIL_FROM_NAME="Recruitment System"

# --- CORS (comma separated) ---
CORS_ORIGINS=https://your-frontend.example.com

# --- Job Processing ---
MAX_JOBS_PER_SEARCH=100
MAX_EMAILS_PER_RUN=5
SLEEP_BETWEEN_EMAILS=3
DRY_RUN=false

# --- Resume Matching ---
MIN_MATCH_SCORE=0.7
MAX_APPLICATIONS_PER_DAY=200
RESUME_MATCH_THRESHOLD=30.0

# --- Scheduling ---
JOB_SEARCH_INTERVAL_HOURS=6
EMAIL_BATCH_INTERVAL_HOURS=24

# --- Runtime ---
HOST=0.0.0.0
PORT=8000
RELOAD=false

# --- SendGrid Extended ---
SENDGRID_FROM_EMAIL=
SENDGRID_FROM_NAME=
BASE_URL=https://api.yourdomain.com
TRACKING_DB_PATH=events.db
SENDGRID_SANDBOX=false
SENDGRID_WEBHOOK_VERIFY=false
SENDGRID_WEBHOOK_PUBLIC_KEY=""
INBOUND_SHARED_TOKEN=""

# --- IMAP Reply Tracking ---
IMAP_HOST=imap.example.com
IMAP_USER=
IMAP_PASS=
IMAP_FOLDER=INBOX
IMAP_SSL=true
IMAP_SINCE_DAYS=14
IMAP_CHECK_TOKEN=
REPLY_TO_EMAIL=

# --- Redis ---
REDIS_URL=redis://localhost:6379/0

# --- Rate Limiting ---
RATE_LIMIT_PER_MINUTE=60

# END
 
#############################################
# Supabase additions (DB + Frontend)        #
#############################################
# Prefer this Postgres URL when set (will override DATABASE_URL in settings)
# Example: postgresql+psycopg2://postgres.USER:PASS@db.YOUR_HOST.supabase.co:5432/postgres?sslmode=require
SUPABASE_POSTGRES_URL=

# Supabase service role key (server-side only; DO NOT expose to frontend)
SUPABASE_SERVICE_ROLE_KEY=

# Storage buckets (create these in Supabase > Storage)
SUPABASE_STORAGE_BUCKET_DOCS=docs
SUPABASE_STORAGE_BUCKET_UPLOADS=uploads

# Optional: toggle explicit storage enable (auto-detected if keys + buckets set)
# SUPABASE_STORAGE_ENABLED=true

# Frontend environment for Supabase client (if/when used)
NEXT_PUBLIC_SUPABASE_URL=
NEXT_PUBLIC_SUPABASE_ANON_KEY=

# Frontend API base for local dev (Next.js -> FastAPI proxy)
NEXT_PUBLIC_API_BASE_URL=http://localhost:8011/api